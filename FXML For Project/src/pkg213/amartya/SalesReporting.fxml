<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg213.amartya.SalesReportingController">
    <children>
        <Label text="Sales Reporting" style="-fx-font-size: 16; -fx-font-weight: bold;" />
        <TableView fx:id="salesReportTable" prefHeight="200.0" prefWidth="300.0">
            <columns>
                <TableColumn text="Month" />
                <TableColumn text="Total Sales" />
                <TableColumn text="Targets Achieved" />
                <TableColumn text="Growth %" />
            </columns>
        </TableView>
        <Button text="Save" fx:id="saveButton" onAction="#handleSaveAction"/>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
