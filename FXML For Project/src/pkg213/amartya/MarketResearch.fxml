<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg213.amartya.MarketResearchController">
    <children>
        <Label text="Market Research" style="-fx-font-size: 16; -fx-font-weight: bold;" />
        <TableView fx:id="marketResearchTable" prefHeight="200.0" prefWidth="300.0">
            <columns>
                <TableColumn text="Parameter" fx:id="parameterColumn" />
                <TableColumn text="Value" fx:id="valueColumn" />
            </columns>
        </TableView>
        <TextArea fx:id="researchNotes" prefHeight="100.0" prefWidth="300.0" promptText="Detailed Analysis or Notes" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>

