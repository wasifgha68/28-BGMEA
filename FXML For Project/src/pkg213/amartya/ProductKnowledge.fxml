<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg213.amartya.ProductKnowledgeController">
    <children>
        <Label text="Product Knowledge" style="-fx-font-size: 16; -fx-font-weight: bold;" />
        <ListView fx:id="productList" prefHeight="150.0" prefWidth="300.0" />
        <TextArea fx:id="productDetails" prefHeight="100.0" prefWidth="300.0" promptText="Details about the selected product" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>

